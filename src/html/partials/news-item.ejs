<article class="news-item w-full bg-white flex border-b border-gray-600">
    <a href="https://www.nytimes.com/" class="news-item-link w-full flex flex-none p-2">
        <img class="news-item-icon rounded-full w-32 h-32 p-4 flex-none" src="https://randomuser.me/api/portraits/women/17.jpg">

        <div class="ml-4 h-full py-4">
            <p class="news-item-headline card-title overflow-hidden">Headline</p>
            <p class="news-item-body card-copy relative h-16 pr-4 overflow-hidden">Lorem ipsum dolor sit amet consectetur adipisicing elit. Labore voluptates iusto ea quae, rem voluptatibus aut facilis expedita omnis explicabo.</p>
        </div>
    </a>
 
    <% if(showTrashButton == true) { %>
        <button class="news-item-button button-trash bg-red-500"><i class="fas fa-trash"></i></button>
    <% } else { %>
        <button class="news-item-button button-archive bg-blue-500"><i class="fas fa-inbox"></i></button>
    <% } %>
</article>